{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"],
    "lib": ["es2022", "dom"]
  },
  "include": ["./**/*.ts", "./**/*.js", "./**/*.d.ts"],
  "exclude": ["./node_modules", "./dist"]
}